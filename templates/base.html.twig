<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Safer | Sociétés d&#039;aménagement foncier et d&#039;établissement rural</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/logo.svg') }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block style %}
    {% endblock %}
</head>
<body class="font-sans font-normal antialiased bg-white text-gray-900">
{% block nav %}
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between">
                <div class="flex space-x-7">
                    <div>
                        <!-- Website Logo -->
                        <a href="/" class="flex items-center py-4 px-2">
                            <img src="{{ asset('assets/img/logo.svg') }}" class="h-10 w-10 mr-3">
                            <span class="font-bold uppercase italic text-green-600">SAFER</span>
                        </a>
                    </div>
                    <!-- Primary Navbar items -->
                    <div class="hidden md:flex items-center space-x-1">
                        <a href="/"
                           class="py-4 px-3 text-gray-600 font-bold hover:text-green-600 transition duration-300">Accueil</a>
                        <a href="/bien"
                           class="py-4 px-3 text-gray-600 font-bold hover:text-green-600 transition duration-300">Biens</a>
                        <a href="/about"
                           class="py-4 px-3 text-gray-600 font-bold hover:text-green-600 transition duration-300">À
                            propos</a>
                        <a href="/contact"
                           class="py-4 px-3 text-gray-600 font-bold hover:text-green-600 transition duration-300">Contact</a>
                        {% if app.user == null %}
                            <a href="/connexion"
                               class="py-4 px-3 text-gray-600 font-bold hover:text-green-600 transition duration-300">Se
                                connecter</a>
                        {% else %}
                            <button id="dropdownDefault" data-dropdown-toggle="dropdown"
                                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                                    type="button">Connecté en tant que : {{ app.user.email }}
                                <svg class="ml-2 w-4 h-4" aria-hidden="true" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            <!-- Dropdown menu -->
                            <div id="dropdown"
                                 class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700">
                                <ul class="py-1 text-sm text-gray-700 dark:text-gray-200"
                                    aria-labelledby="dropdownDefault">
                                    <li>
                                        <a href="/admin/GererBien"
                                           class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Gérer
                                            biens</a>
                                    </li>
                                    <li>
                                        <a href="/admin/GererCateg"
                                           class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Gérer
                                            catégories</a>
                                    </li>
                                    <li>
                                        <a href="/admin/GererUser"
                                           class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Gérer
                                            users</a>
                                    </li>
                                    <li>
                                        <a href="/logout"
                                           class="block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Se
                                            déconnecter</a>
                                    </li>
                                </ul>
                            </div>

                        {% endif %}
                        {% if app.session.get('idSession') != null %}
                            <a href="/favoris/voir"
                               class="py-4 px-3 text-gray-600 font-bold hover:text-green-600 transition duration-300">
                                Voir favoris</a>
                        {% else %}
                        {% endif %}
                    </div>
                </div>
                <!-- Secondary Navbar items -->
                <div class="hidden md:flex items-center space-x-3 ">
                    <!-- a href="" class="py-2 px-4 font-medium text-gray-500 rounded-xl hover:bg-green-600 hover:text-white transition duration-300">Log In</a-->
                    <!--a href="" class="py-2 px-5 font-medium text-white bg-green-600 rounded-xl hover:bg-gray-600 transition duration-300">Panel Admin</a-->
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button class="outline-none mobile-menu-button">
                        <svg class=" w-6 h-6 text-gray-600 hover:text-green-600 "
                             x-show="!showMenu"
                             fill="none"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             stroke-width="2"
                             viewBox="0 0 24 24"
                             stroke="currentColor"
                        >
                            <path d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <!-- mobile menu -->
        <div class="hidden mobile-menu">
            <ul class="">
                <li class="active"><a href="/"
                                      class="block text-sm px-2 py-4 text-white bg-green-600 font-bold">Accueil</a></li>
                <li><a href="/categories"
                       class="block text-sm px-2 py-4 hover:text-white hover:bg-green-600 transition duration-300">Catégories</a>
                </li>
                <li><a href="/bien"
                       class="block text-sm px-2 py-4 hover:text-white hover:bg-green-600 transition duration-300">Biens</a>
                </li>
                <li><a href="/about"
                       class="block text-sm px-2 py-4 hover:text-white hover:bg-green-600 transition duration-300">À
                        propos</a></li>
                <li><a href="/contact"
                       class="block text-sm px-2 py-4 hover:text-white hover:bg-green-600 transition duration-300">Contact</a>
                </li>
            </ul>
        </div>
        <script src="https://unpkg.com/flowbite@1.5.5/dist/flowbite.js"></script>
        <script>
            const btn = document.querySelector("button.mobile-menu-button");
            const menu = document.querySelector(".mobile-menu");

            btn.addEventListener("click", () => {
                menu.classList.toggle("hidden");
            });
        </script>
    </nav>
{% endblock %}
{% block body %}
{% endblock %}

{% block footer %}
    <footer class="p-4 bg-white rounded-lg shadow md:px-6 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="/" class="flex items-center mb-4 sm:mb-0">
                <img src="/assets/img/logo.svg" class="mr-3 h-8" alt="SaferPW Logo"/>
                <span class="self-center text-2xl font-semibold whitespace-nowrap">SAFER</span>
            </a>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8"/>
        <span class="block text-sm text-gray-500 sm:text-center">© 2022 <a
                    href="/" class="hover:underline">SAFER™</a>. Tous droits réservés.
    </span>
    </footer>
{% endblock %}
</body>
</html>
