{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-4xl font-bold dark:text-white text-center">Register</h1>
    <div class="grid place-items-center form-control form-group">
        {{ form_start(registrationForm) }}
        {% for attribute in registrationForm %}
            {% if 'token' not in form_label(attribute) %}
                {{ form_label(attribute, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}})}}
            {% endif %}
            {{ form_widget(attribute, {'attr': {'class': 'form-control block px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:outline-none'}}) }}
        {% endfor %}

            <button type="submit" class="inline-block px-6 py-2.5 text-white bg-gray-500 font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out w-full mb-3">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
